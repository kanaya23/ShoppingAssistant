{
  "manifest_version": 3,
  "name": "Shopee Shopping Assistant",
  "version": "1.0.2",
  "description": "AI-powered shopping assistant for Shopee Indonesia, featuring Gemini AI with agentic capabilities",
  "author": "Bayuumi!",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "*://*.shopee.co.id/*",
    "*://*.shopee.com/*",
    "https://gemini.google.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://google.serper.dev/*",
    "wss://mullion.indonesiacentral.cloudapp.azure.com/*",
    "https://mullion.indonesiacentral.cloudapp.azure.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.shopee.co.id/*",
        "*://*.shopee.com/*"
      ],
      "js": [
        "lib/browser-polyfill.js",
        "lib/deep-scraper.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "lib/browser-polyfill.js",
        "lib/gemini-content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Toggle Shopping Assistant"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Toggle Shopping Assistant"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "sidebar/*"
      ],
      "matches": [
        "*://*.shopee.co.id/*",
        "*://*.shopee.com/*",
        "https://gemini.google.com/*"
      ]
    }
  ]
}