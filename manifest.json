{
  "manifest_version": 2,
  "name": "Shopee Shopping Assistant",
  "version": "1.0.2",
  "description": "AI-powered shopping assistant for Shopee Indonesia, featuring Gemini AI with agentic capabilities",
  "author": "Bayuumi!",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "windows",
    "*://*.shopee.co.id/*",
    "*://*.shopee.com/*"
  ],
  "background": {
    "scripts": [
      "lib/gemini.js",
      "lib/deep-scrape-manager.js",
      "lib/tools.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.shopee.co.id/*",
        "*://*.shopee.com/*"
      ],
      "js": [
        "lib/deep-scraper.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Toggle Shopping Assistant"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Toggle Shopping Assistant"
    }
  },
  "web_accessible_resources": [
    "icons/*",
    "sidebar/*"
  ]
}